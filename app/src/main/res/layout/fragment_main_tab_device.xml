<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/title_relativeLayout"
        android:background="@color/blue">

        <TextView
            style="@style/title_textsize"
            android:text="@string/fragment_device_title_name" />

        <ImageView
            android:id="@+id/imageView_deviceFrag_add"
            style="@style/title_right_imageview"
            android:src="@drawable/selector_imageview_device_add" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能设备列表"
            android:textSize="@dimen/content_textsize_small"/>

        <ListView
            android:id="@+id/listView_deviceFragment_devices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayout_personalFrag_root">

    <RelativeLayout
        style="@style/title_relativeLayout"
        android:background="@color/blue">

        <TextView
            style="@style/title_textsize"
            android:text="@string/fragment_personal_title_name" />

        <ImageView
            android:id="@+id/imageView_meFrament_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/me_title_setting" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout_personalFrag_user"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView_personalFrag_userImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/userinfo_showuserimg" />

        <TextView
            android:id="@+id/textView_personalFrag_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="马云"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/content_textsize_small" />
    </LinearLayout>

    <TextView style="@style/diver" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/linearLayout_personalFrag_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/personal_score" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的积分"
                android:textSize="@dimen/content_textsize_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_personalFrag_evaluate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/personal_evaluate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="驾驶评价"
                android:textSize="@dimen/content_textsize_small" />
        </LinearLayout>
    </LinearLayout>

    <TextView style="@style/diver" />

    <TextView
        style="@style/diver"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout_personalFrag_forum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/personal_forul" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="论坛"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/content_textsize_small" />

            <ImageView style="@style/content_item_image_enter_style" />
        </RelativeLayout>

        <TextView style="@style/diver" />

        <RelativeLayout
            android:id="@+id/relativeLayout_personalFrag_feedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:src="@mipmap/personal_feedback" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/imageView2"
                android:gravity="center_vertical"
                android:text="反馈"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/content_textsize_small" />

            <ImageView style="@style/content_item_image_enter_style" />
        </RelativeLayout>

        <TextView style="@style/diver" />

        <RelativeLayout
            android:id="@+id/relativeLayout_personalFrag_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:src="@mipmap/personal_setting" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/imageView3"
                android:gravity="center_vertical"
                android:text="设置"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/content_textsize_small" />

            <ImageView style="@style/content_item_image_enter_style" />
        </RelativeLayout>

        <TextView style="@style/diver" />
    </LinearLayout>

</LinearLayout>